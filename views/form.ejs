<% layout('layout', { pageTitle: title }) %>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="h4 mb-3"><%= title %></h1>
        <form action="<%= action %>" method="POST">
          <div class="mb-3">
            <label class="form-label">Titel *</label>
            <input type="text" name="title" class="form-control" required value="<%= item.title || '' %>">
          </div>
          <div class="mb-3">
            <label class="form-label">Beschreibung *</label>
            <textarea name="description" class="form-control" rows="4" required><%= item.description || '' %></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label d-flex align-items-center gap-2">Icon <span class="text-muted small">(Emoji oder Bild-URL)</span></label>
            <input type="text" name="icon" class="form-control" placeholder="z.B. â­ oder https://..." value="<%= item.icon || '' %>">
            <div class="form-text">Wenn eine URL angegeben wird, wird das Bild als Icon angezeigt. Ohne URL wird der Text/Emoji angezeigt.</div>
          </div>
          <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Speichern</button>
            <a href="/" class="btn btn-outline-secondary">Abbrechen</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
