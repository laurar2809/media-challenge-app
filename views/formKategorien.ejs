<% pageTitle = title %>
<h1 class="h4 mb-3"><%= title %></h1>
<form action="<%= action %>" method="POST" enctype="multipart/form-data">
  <div class="mb-3">
    <label class="form-label">Titel *</label>
    <input type="text" name="title" class="form-control" required value="<%= item.title || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Beschreibung *</label>
    <textarea name="description" class="form-control" rows="4" required><%= item.description || '' %></textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">Icon (Datei hochladen)</label>
    <input type="file" name="iconFile" class="form-control">
    <div class="form-text">Optional. Überschreibt Emoji/URL, wenn gesetzt.</div>
  </div>
  <div class="mb-3">
    <label class="form-label d-flex align-items-center gap-2">Icon (Emoji oder Bild-URL)</label>
    <input type="text" name="icon" class="form-control" placeholder="z.B. ⭐ oder https://..." value="<%= item.icon || '' %>">
  </div>
  <div class="d-flex gap-2">
    <button type="submit" class="btn btn-primary">Speichern</button>
    <a href="/" class="btn btn-outline-secondary">Abbrechen</a>
  </div>
</form>
        