<% pageTitle="Challenge Details" %>

  <div class="card">
    <div class="navbar card-header bg-primary text-white">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="h4 m-0">
          <%= challenge.aufgabenpaket_title || 'Challenge' %>
        </h2>
      </div>
    </div>

    <div class="card-body">
      <!-- Bild vom Aufgabenpaket -->
      <% if (challenge.aufgabenpaket_icon) { %>
        <div class="text-center mb-4">
          <img src="<%= challenge.aufgabenpaket_icon %>" class="img-fluid rounded" style="max-height: 200px;">
        </div>
        <% } else { %>
          <div class="text-center mb-4 text-muted">
            <img src="/assets/file-image.svg" class="img-fluid rounded" style="max-height: 200px; opacity: 0.5;">
            <p class="small mt-2">Kein Bild vorhanden</p>
          </div>
          <% } %>

            <!-- Challenge Informationen -->
            <div class="mb-4">
              <h5 class="text-muted">Challenge Informationen</h5>
              <div class="row mt-3">
                <div class="col-md-6 mb-3">
                  <strong>Aufgabenpaket:</strong>
                  <div class="mt-1">
                    <%= challenge.aufgabenpaket_title || 'Nicht zugewiesen' %>
                  </div>
                </div>

                <div class="col-md-6 mb-3">
                  <strong>Kategorie:</strong>
                  <div class="mt-1">
                    <%= challenge.kategorie %>
                  </div>
                </div>

                <div class="col-md-6 mb-3">
                  <strong>Abgabedatum:</strong>
                  <div class="mt-1">
                    <% if (challenge.abgabedatum) { %>
                      <%= new Date(challenge.abgabedatum).toLocaleDateString('de-DE') %>
                        <% } else { %>
                          <span class="text-muted">Nicht festgelegt</span>
                          <% } %>
                  </div>
                </div>

                <div class="col-md-6 mb-3">
                  <strong>Schuljahr:</strong>
                  <div class="mt-1">
                    <%= challenge.schuljahr_name || 'Nicht zugewiesen' %>
                  </div>
                </div>
              </div>

              <% if (challenge.zusatzinfos) { %>
                <div class="mt-3">
                  <strong>Zusatzinformationen:</strong>
                  <div class="mt-1 p-3 bg-light rounded">
                    <%= challenge.zusatzinfos %>
                  </div>
                </div>
                <% } %>
            </div>

            <!-- Aufgabenpaket Beschreibung -->
            <% if (challenge.aufgabenpaket_description) { %>
              <div class="mb-4">
                <h5 class="text-muted">Aufgabenpaket Beschreibung</h5>
                <p class="mt-2">
                  <%= challenge.aufgabenpaket_description %>
                </p>
              </div>
              <% } %>

                <!-- Team Informationen -->
                <div class="mb-4">
                  <h5 class="text-muted">Team Informationen</h5>
                  <% if (challenge.team_name) { %>
                    <div class="row mt-3">
                      <div class="col-md-6 mb-3">
                        <strong>Team Name:</strong>
                        <div class="mt-1">
                          <%= challenge.team_name %>
                        </div>
                      </div>

                      <div class="col-12 mb-3">
                        <strong>Teammitglieder:</strong>
                        <div class="mt-1">
                          <% if (challenge.team_mitglieder_names) { %>
                            <%= challenge.team_mitglieder_names %>
                              <% } else { %>
                                <span class="text-muted">Keine Teammitglieder</span>
                                <% } %>
                        </div>
                      </div>
                    </div>
                    <% } else { %>
                      <p class="text-muted mt-2">Kein Team zugewiesen</p>
                      <% } %>
                </div>

                <!-- Metadaten -->
                <div class="row text-muted small">
                  <div class="col-md-4">
                    <strong>Erstellt:</strong>
                    <%= new Date(challenge.created_at).toLocaleDateString('de-DE') %>
                  </div>
                  <div class="col-md-4">
                    <strong>Geändert:</strong>
                    <% if (challenge.updated_at) { %>
                      <%= new Date(challenge.updated_at).toLocaleDateString('de-DE') %>
                        <% } else { %>
                          Nie bearbeitet
                          <% } %>
                  </div>
                  <div class="col-md-4">
                    <strong>Challenge ID:</strong>
                    <%= challenge.id %>
                  </div>
                </div>
    </div>

    <div class="card-footer">
      <div class="d-flex gap-2">
        <a href="/challenges/<%= challenge.id %>/edit" class="btn btn-custom-safe">Bearbeiten</a>
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
          Löschen
        </button>
        <a href="/challenges" class="btn btn-outline-secondary">← Zurück zur Übersicht</a>
      </div>
    </div>
  </div>

  <!-- Lösch-Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Challenge löschen</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Sind Sie sicher, dass Sie diese Challenge löschen möchten?</p>
          <div class="alert alert-warning mt-2">
            <strong>Achtung:</strong> Diese Aktion kann nicht rückgängig gemacht werden!
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
          <form action="/challenges/<%= challenge.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Ja, löschen</button>
          </form>
        </div>
      </div>
    </div>
  </div>