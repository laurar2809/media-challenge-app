<% pageTitle="Aufgabenpakete" %>

<div class="d-flex align-items-center justify-content-between mb-3">
  <h2 class="h4 m-0">Aufgabenpakete</h2>
  <a href="/aufgabenpakete/new" class="btn btn-custom-newCategorieChallenge">+ Neues Aufgabenpaket</a>
</div>

<!-- FILTER UND SUCHLEISTE -->
<div class="row mb-4">
  <div class="col-md-6">
    <!-- Kategorien Filter -->
    <div class="input-group">
      <span class="input-group-text">Kategorie:</span>
      <select class="form-select" id="kategorienFilter">
        <option value="alle" <%= activeKategorie === 'alle' ? 'selected' : '' %>>Alle Kategorien</option>
        <% if (kategorien && kategorien.length > 0) { %>
          <% kategorien.forEach(kat => { %>
            <option value="<%= kat.title %>" 
                    <%= activeKategorie === kat.title ? 'selected' : '' %>>
              <%= kat.title %>
            </option>
          <% }) %>
        <% } %>
      </select>
    </div>
  </div>
  
  <div class="col-md-6">
    <!-- Suchleiste -->
    <div class="position-relative" id="searchContainer">
      <input type="text" 
             id="aufgabenpaketeSearch" 
             class="form-control" 
             placeholder="üîç Aufgabenpakete suchen..." 
             value="<%= searchTerm %>"
             autocomplete="off">
    </div>
  </div>


  <div class="table-responsive">
    <table class="table table-hover table align-middle m-0 table-light">
      <thead class="table-light">
</div>

<!-- Such-Badge -->
<div id="searchBadge" class="mb-2" 
  <% if (!searchTerm) { %>style="display: none;"<% } %>
>
  <span class="badge bg-primary d-inline-flex align-items-center">
    Suchergebnisse f√ºr: <span id="searchTermText" class="ms-1">
    <%= searchTerm %>
    </span>
    <a href="/aufgabenpakete" id="clearSearch" class="text-white ms-2 text-decoration-none">√ó</a>
  </span>
</div>

<div class="table-responsive">
  <table class="table table-hover table align-middle m-0">
    <thead class="table-light">
      <tr>
        <th class="text-start">Kategorie</th>
        <th>Name</th>
        <th>Beschreibung</th>
        <th class="text-end" style="min-width: 200px;">Aktionen</th>
      </tr>
    </thead>
    <tbody id="aufgabenpaketeTableBody">
      <% if (aufgabenpakete.length === 0) { %>
        <tr>
          <td colspan="4" class="text-center py-4 text-muted">
            <% if (searchTerm || activeKategorie !== 'alle') { %>
              Keine Aufgabenpakete gefunden f√ºr die ausgew√§hlten Filter
            <% } else { %>
              Noch keine Aufgabenpakete vorhanden
            <% } %>

              <% aufgabenpakete.forEach(aufgabenpaket=> { %>
                <tr class="aufgabenpaket-row" data-id="<%= aufgabenpaket.id %>">
                  <td class="text-start">
                    <%= aufgabenpaket.kategorie %>
                  </td>
                  <td class="fw-medium">
                    <%= aufgabenpaket.title %>
                  </td>
                  <td class="text-body-secondary">
                    <%= aufgabenpaket.description %>
                  </td>
                  <td class="text-end" style="white-space: nowrap;">
                    <a href="/aufgabenpakete/<%= aufgabenpaket.id %>"
                      class="btn btn-outline-primary btn-custom-details btn btn-sm">Details</a>
                    <a href="/aufgabenpakete/<%= aufgabenpaket.id %>/edit"
                      class="btn btn-outline-secondary btn-custom-edit btn btn-sm">Bearbeiten</a>
                    <button type="button" class="btn btn-outline-danger btn-custom-delete btn btn-sm" data-bs-toggle="modal"
                      data-bs-target="#confirmDeleteModal" data-id="<%= aufgabenpaket.id %>">L√∂schen</button>
                  </td>
                </tr>
                <% }) %>
                  <% } %>
      </tbody>

    </table>

    <!-- Pop Up L√∂schen Fenster -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header custom-delete-header">
            <h5 class="modal-title">L√∂schen best√§tigen</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Bist du sicher, dass du diesen Datensatz l√∂schen m√∂chtest?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
            <form id="deleteConfirmForm" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-custom-danger">Ja, l√∂schen</button>
            </form>
          </div>
          </td>
        </tr>
      <% } %>

      <% if (aufgabenpakete.length > 0) { %>
        <% aufgabenpakete.forEach(paket => { %>
          <tr class="aufgabenpaket-row" 
              data-id="<%= paket.id %>"
              data-title="<%= paket.title.toLowerCase() %>"
              data-description="<%= paket.description.toLowerCase() %>"
              data-kategorie="<%= paket.kategorie.toLowerCase() %>">
            <td class="text-start">
              <%= paket.kategorie %>
            </td>
            <td class="fw-medium">
              <%= paket.title %>
            </td>
            <td class="text-body-secondary">
              <%= paket.description %>
            </td>
            <td class="text-end" style="white-space: nowrap;">
              <a href="/aufgabenpakete/<%= paket.id %>"
                class="btn btn-outline-primary btn-custom-details">Details</a>
              <a href="/aufgabenpakete/<%= paket.id %>/edit"
                class="btn btn-outline-secondary btn-custom-edit">Bearbeiten</a>
              <button type="button" class="btn btn-outline-danger btn-custom-delete" data-bs-toggle="modal"
                data-bs-target="#confirmDeleteModal" data-id="<%= paket.id %>">L√∂schen</button>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>

  <!-- Pop Up L√∂schen Fenster -->
  <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header custom-delete-header">
          <h5 class="modal-title">L√∂schen best√§tigen</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Bist du sicher, dass du diesen Datensatz l√∂schen m√∂chtest?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
          <form id="deleteConfirmForm" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-custom-danger">Ja, l√∂schen</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Suchfunktionalit√§t f√ºr Aufgabenpakete - MIT LIVE-FILTERING
  const searchContainer = document.getElementById('searchContainer');
  const searchInput = document.getElementById('aufgabenpaketeSearch');
  const searchTermText = document.getElementById('searchTermText');
  const clearSearch = document.getElementById('clearSearch');
  const searchBadge = document.getElementById('searchBadge');
  const kategorienFilter = document.getElementById('kategorienFilter');
  const aufgabenpaketeRows = document.querySelectorAll('.aufgabenpaket-row');

  let searchTimeout;

  // Filter bei √Ñnderung anwenden
  kategorienFilter.addEventListener('change', function() {
    applyFilters();
  });

  // LIVE-SUCHE bei Eingabe - Filtert sofort die Liste
  searchInput.addEventListener('input', function() {
    clearTimeout(searchTimeout);
    const query = this.value.trim().toLowerCase();

    // Sofortige Filterung anwenden
    searchTimeout = setTimeout(() => {
      applyFilters();
      
      // Zeige Such-Badge nur bei Suchbegriff
      if (query.length >= 2) {
        searchTermText.textContent = query;
        searchBadge.style.display = 'flex';
      } else {
        searchBadge.style.display = 'none';
      }
    }, 300);
  });

  // Filter anwenden - LIVE-FILTERING
  function applyFilters() {
    const kategorieValue = kategorienFilter.value.toLowerCase();
    const searchValue = searchInput.value.trim().toLowerCase();
    
    let visibleCount = 0;

    aufgabenpaketeRows.forEach(row => {
      const title = row.getAttribute('data-title');
      const description = row.getAttribute('data-description');
      const kategorie = row.getAttribute('data-kategorie');
      
      const matchesKategorie = kategorieValue === 'alle' || kategorie === kategorieValue;
      const matchesSearch = !searchValue || 
                           title.includes(searchValue) || 
                           description.includes(searchValue) || 
                           kategorie.includes(searchValue);
      
      if (matchesKategorie && matchesSearch) {
        row.style.display = '';
        visibleCount++;
      } else {
        row.style.display = 'none';
      }
    });

    // Zeige "Keine Ergebnisse" wenn n√∂tig
    const tbody = document.getElementById('aufgabenpaketeTableBody');
    let noResultsRow = tbody.querySelector('.no-results-row');
    
    if (visibleCount === 0) {
      if (!noResultsRow) {
        noResultsRow = document.createElement('tr');
        noResultsRow.className = 'no-results-row';
        noResultsRow.innerHTML = `
          <td colspan="4" class="text-center py-4 text-muted">
            Keine Aufgabenpakete gefunden f√ºr die ausgew√§hlten Filter
          </td>
        `;
        tbody.appendChild(noResultsRow);
      }
      noResultsRow.style.display = '';
    } else if (noResultsRow) {
      noResultsRow.style.display = 'none';
    }
  }

  // Search beenden
  clearSearch.addEventListener('click', function(e) {
    e.preventDefault();
    searchInput.value = '';
    searchBadge.style.display = 'none';
    applyFilters();
  });

  // Eventlistener f√ºr modales Fenster beim Delete
  const deleteModal = document.getElementById('confirmDeleteModal');
  const deleteForm = document.getElementById('deleteConfirmForm');

  deleteModal.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;
    const itemId = button.getAttribute('data-id');
    deleteForm.action = `/aufgabenpakete/${itemId}?_method=DELETE`;
  });

  // Initial Filter anwenden falls Suchbegriff vorhanden
  if (searchInput.value) {
    applyFilters();
  }
</script>