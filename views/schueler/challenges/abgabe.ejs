        <div id="pageData" data-challenge-id="<%= challenge.id %>"
        data-is-submitted="<%= abgabe && abgabe.status === 'eingereicht' %>"
        data-initial-files="<%= JSON.stringify(abgabe && abgabe.medien ? abgabe.medien : []) %>" style="display: none;">
    </div>

        <script>
        document.addEventListener('DOMContentLoaded', function () {

            // 1. DATEN AUS DEM HTML AUSLESEN
            const pageData = document.getElementById('pageData');
            const challengeId = pageData.dataset.challengeId;
            const isSubmitted = pageData.dataset.isSubmitted === 'true';

            // 2. INITIAL FILES PARSEN (WENN VORHANDEN)
            let initialFiles = [];
            // Hole den Wert und trimme ihn sofort
            const filesJsonRaw = pageData.dataset.initialFiles;
            let filesJson = filesJsonRaw ? filesJsonRaw.trim() : '[]'; // Entferne f√ºhrende/nachfolgende Leerzeichen

            try {
                // Wenn der Wert jetzt leer ist, verwenden wir den Fallback
                if (filesJson.length > 0 && filesJson !== 'null') {
                    initialFiles = JSON.parse(filesJson);
                } else {
                    initialFiles = [];
                }

            } catch (e) {
                // Verwende filesJsonRaw im Log f√ºr Debugging, da es den originalen fehlerhaften String enth√§lt
                console.error('Fehler beim Parsen der initialen Dateien. Original JSON:', filesJsonRaw, e);
                initialFiles = [];
            }

            // 3. DEBUG AUSGABE
            console.log('Geladene Daten:', {
                challengeId: challengeId,
                isSubmitted: isSubmitted,
                initialFilesCount: initialFiles.length
            });

            // 4. ELEMENTE
            const dropZone = document.getElementById('dropZone');
            const fileInput = document.getElementById('fileInput');
            const filesGrid = document.getElementById('filesGrid');
            const noFilesMessage = document.getElementById('noFilesMessage');
            const fileCount = document.getElementById('fileCount');

            // 5. UPLOADED FILES ARRAY (MIT BEREITS EXISTIERENDEN DATEIEN STARTEN)
            let uploadedFiles = initialFiles;

            // Drag & Drop Events
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            // Highlight when dragging over
            ['dragenter', 'dragover'].forEach(eventName => {
                dropZone.addEventListener(eventName, () => {
                    dropZone.classList.add('border-primary', 'bg-light');
                }, false);
            });

            // Remove highlight
            ['dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, () => {
                    dropZone.classList.remove('border-primary', 'bg-light');
                }, false);
            });

            // Handle drop
            dropZone.addEventListener('drop', handleDrop, false);


            // File input change
            fileInput.addEventListener('change', handleFiles);

            function handleDrop(e) {
                const files = e.dataTransfer.files;
                handleFileList(files);
            }

            function handleFiles(e) {
                const files = e.target.files;
                handleFileList(files);
            }

            function handleFileList(files) {
                // üõë KORRIGIERTE LOGIK: Pr√ºfe auf die 'isLocked' Variable im JS-Scope
                const isLocked = document.getElementById('submitBtn').disabled;
                if (isLocked) {
                    showMessage('Abgabe ist gesperrt und kann nicht bearbeitet werden.', 'warning');
                    return;
                }

                Array.from(files).forEach(file => {
                    uploadFile(file);
                });

                fileInput.value = '';
            }

            function uploadFile(file) {
                // Show progress
                const progressDiv = document.querySelector('.upload-progress');
                const progressBar = progressDiv.querySelector('.progress-bar');
                const statusText = progressDiv.querySelector('.upload-status');

                progressDiv.classList.remove('d-none');
                progressBar.style.width = '0%';
                statusText.textContent = `Lade hoch: ${file.name}`;

                // Create form data
                const formData = new FormData();
                formData.append('file', file);
                formData.append('challengeId', challengeId);

                // Send to server
                fetch('/api/abgaben/upload', {
                    method: 'POST',
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            uploadedFiles.push(data.file);
                            renderFiles();
                            showMessage(' ' + file.name + ' hochgeladen!', 'success');
                        } else {
                            showMessage(' ' + data.error, 'danger');
                        }
                        progressDiv.classList.add('d-none');
                    })
                    .catch(error => {
                        console.error('Upload error:', error);
                        showMessage(' Upload fehlgeschlagen', 'danger');
                        progressDiv.classList.add('d-none');
                    });
            }

            function renderFiles() {
                if (uploadedFiles.length === 0) {
                    filesGrid.innerHTML = '';
                    noFilesMessage.classList.remove('d-none');
                    fileCount.textContent = '0';
                    return;
                }

                noFilesMessage.classList.add('d-none');
                fileCount.textContent = uploadedFiles.length;
                
                // üõë Lese die Sperrlogik erneut f√ºr die Buttons der Dateien
                const isDeleteLocked = document.getElementById('submitBtn').disabled;


                filesGrid.innerHTML = uploadedFiles.map(file => {
                    // Vorschaubild f√ºr Bilder
                    let preview = '';
                    if (file.datei_typ === 'image') {
                        preview = `<img src="${file.datei_pfad}" class="img-fluid rounded-top" style="height: 120px; object-fit: cover;">`;
                    } else if (file.datei_typ === 'video') {
                        preview = `<div class="bg-dark text-white d-flex align-items-center justify-content-center rounded-top" style="height: 120px;">
                    <i class="bi bi-play-circle display-4"></i>
                  </div>`;
                    } else {
                        preview = `<div class="bg-light d-flex align-items-center justify-content-center rounded-top" style="height: 120px;">
                    <i class="bi bi-file-earmark display-4 text-muted"></i>
                  </div>`;
                    }

                    return `
        <div class="col-6 col-md-4 col-lg-3">
          <div class="file-card border rounded">
            ${preview}
            <div class="p-2">
              <div class="small text-truncate" title="${file.original_name}">
                ${file.original_name}
              </div>
              <div class="d-flex justify-content-between align-items-center mt-1">
                <small class="text-muted">${formatFileSize(file.groesse_bytes)}</small>
                <button class="btn btn-sm btn-outline-danger" onclick="deleteFile(${file.id})" 
                        ${isDeleteLocked ? 'disabled' : ''}>
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      `;
                }).join('');
            }

            function formatFileSize(bytes) {
                if (bytes < 1024) return bytes + ' Bytes';
                if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
                return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
            }

            function showMessage(message, type) {
                const alert = document.createElement('div');
                alert.className = `alert alert-${type} alert-dismissible fade show position-fixed top-0 end-0 m-3`;
                alert.style.zIndex = '9999';
                alert.innerHTML = `
      ${message}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
                document.body.appendChild(alert);

                setTimeout(() => alert.remove(), 3000);
            }

            // Save buttons
            document.getElementById('saveDraftBtn').addEventListener('click', () => {
                saveAbgabe('entwurf', 'Entwurf gespeichert!');
            });

            document.getElementById('submitBtn').addEventListener('click', () => {
                if (confirm('Abgabe endg√ºltig einreichen?\nDanach sind keine √Ñnderungen mehr m√∂glich!')) {
                    saveAbgabe('eingereicht', 'Abgabe erfolgreich eingereicht!');
                }
            });

            function saveAbgabe(status, successMessage) {
                const data = {
                    challenge_id: challengeId,
                    titel: document.getElementById('abgabeTitel').value,
                    beschreibung: document.getElementById('abgabeBeschreibung').value,
                    status: status
                };

                fetch('/api/abgaben/save', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                    .then(response => response.json())
                    .then(result => {
                        if (result.success) {
                            showMessage(' ' + result.message, 'success');
                            if (status === 'eingereicht') {
                                // Nach 2 Sekunden zur√ºck zur Challenge-Liste
                                setTimeout(() => {
                                    window.location.href = '/challenges';
                                }, 2000);
                            }
                        } else {
                            showMessage(' ' + result.error, 'danger');
                        }
                    })
                    .catch(error => {
                        console.error('Save error:', error);
                        showMessage(' Speichern fehlgeschlagen', 'danger');
                    });
            }

            // Global function to delete file
            window.deleteFile = function (fileId) {
                // üõë KORRIGIERTE LOGIK: Pr√ºfe auf die 'isLocked' Variable im JS-Scope
                const isLocked = document.getElementById('submitBtn').disabled;

                if (isLocked) {
                    showMessage('Abgabe ist gesperrt und kann nicht bearbeitet werden.', 'warning');
                    return;
                }

                if (confirm('Datei wirklich l√∂schen?')) {

                    //  API-CALL ZUM L√ñSCHEN
                    fetch(`/api/abgaben/media/${fileId}`, {
                        method: 'DELETE' // Nutze die DELETE-Methode
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                showMessage(' Datei gel√∂scht!', 'success');

                                //  Entferne die Datei aus dem lokalen Array
                                uploadedFiles = uploadedFiles.filter(file => file.id !== fileId);
                                renderFiles(); // Rendere die Liste neu

                            } else {
                                showMessage(' L√∂schen fehlgeschlagen: ' + data.error, 'danger');
                            }
                        })
                        .catch(error => {
                            console.error('L√∂sch-Fehler:', error);
                            showMessage(' L√∂schen fehlgeschlagen (Netzwerkfehler)', 'danger');
                        });
                }
            };
            // Initial render
            renderFiles();
        });
    </script>

