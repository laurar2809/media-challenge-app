<% pageTitle="Abgabe einreichen" %>
  <link rel="stylesheet" href="/style.css">

  <div class="container">
    <!-- Kopfbereich mit Titel / Team / Zurück -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="h4 mb-1">
          <%= challenge.title %>
        </h2>
        <div class="d-flex align-items-center gap-2 text-muted">
          <span class="badge bg-secondary">
            <%= challenge.kategorie %>
          </span>|
          <span class="small">
            <i class="bi bi-people"></i> Team: <%= team.name %>
          </span>
          <!-- HIER: Status hinzugefügt -->
          <% const currentStatus=abgabe ? abgabe.status : 'offen' ; let statusColor='primary' ; let
            statusText=currentStatus.charAt(0).toUpperCase() + currentStatus.slice(1); if (currentStatus==='eingereicht'
            ) statusColor='warning' ; else if (currentStatus==='bewertet' ) statusColor='success' ; else if
            (currentStatus==='abgelehnt' ) statusColor='danger' ; else if (currentStatus==='offen' )
            statusText='Noch nicht gestartet' ; %>
            <span class="small">
              | Status:
              <%= statusText %>
            </span>
            <% if (abgabe && abgabe.updated_at) { %>
              <span class="small">
                | <i class="bi bi-clock-history"></i>
                Zuletzt bearbeitet: <%= new Date(abgabe.updated_at).toLocaleDateString('de-DE') %>
              </span>
              <% } else if (abgabe && abgabe.created_at) { %>
                <span class="small">
                  <i class="bi bi-clock-history"></i>
                  Erstellt: <%= new Date(abgabe.created_at).toLocaleDateString('de-DE') %>
                </span>
                <% } %>
        </div>
      </div>

      <a href="<%= returnTo %>" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Zurück
      </a>
    </div>

    <% const hasFinalStatus=abgabe && (abgabe.status==='bewertet' || abgabe.status==='abgelehnt' ); const
      isBewertet=abgabe && abgabe.status==='bewertet' ; const isAbgelehnt=abgabe && abgabe.status==='abgelehnt' ; %>


      <!-- Bewertungs-/Feedback-Block -->
      <% if (hasFinalStatus) { %>
        <% const bewertung=abgabe.bewertung; const borderClass=isBewertet ? 'border-success' : 'border-danger' ; const
          textClass=isBewertet ? 'text-success' : 'text-danger' ; %>

          <div class="row">
            <div class="col-md-10 col-lg-8 col-xl-7">
              <div class="card <%= borderClass %> mb-4 shadow-sm">
                <div class="card-body">
                  <h5 class="card-title <%= textClass %>">
                    <i class="bi <%= isBewertet ? 'bi-check-circle-fill' : 'bi-x-octagon-fill' %>"></i>
                    <%= isBewertet ? 'Abgabe bewertet!' : 'Abgabe zur Überarbeitung zurückgesandt!' %>
                  </h5>

                  <% if (bewertung && bewertung.feedback) { %>
                    <% if (isBewertet) { %>
                      <div class="row">
                        <div class="col-md-6 mb-2">
                          <strong>Erreichte Punkte:</strong>
                          <span class="fs-4 ms-2 text-primary">
                            <%= bewertung.punkte %>
                          </span>
                        </div>
                        <div class="col-md-6 mb-2">
                          <strong>Bewertet am:</strong>
                          <span class="ms-2">
                            <%= new Date(bewertung.bewertet_am).toLocaleDateString('de-DE') %>
                          </span>
                        </div>
                      </div>
                      <% } %>

                        <h6 class="mt-3">Feedback des Lehrers:</h6>
                        <div class="alert alert-light border">
                          <%= bewertung.feedback %>
                        </div>
                        <% } else { %>
                          <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i>
                            Es wurde kein detaillierter Feedback-Eintrag gefunden.
                          </div>
                          <% } %>
                </div>
              </div>
            </div>
          </div>
          <% } %>

            <!-- Hauptbereich - Alle Karten nebeneinander -->
            <div class="row g-3">
              <!-- Linke Spalte: Upload + Beschreibung -->
              <div class="col-lg-8">
                <div class="row g-3">
                  <!-- Upload-Karte ultra kompakt -->
                  <div class="col-12">
                    <div class="card shadow-sm border-0">
                      <div class="card-header text-bg-light">
                        <i class="bi bi-cloud-upload me-2"></i>Dateien hochladen
                      </div>
                      <div class="card-body p-3">
                        <!-- Kompakte Drop-Zone -->
                        <div class="border border-dashed rounded p-1 text-center mb-1" id="dropZone">
                          <div class="py-1">
                            <i class="bi bi-cloud-arrow-up text-muted fs-4 mb-2"></i>
                            <p class="mb-2 small">
                              <span class="fw-medium d-block">Dateien hierher ziehen</span>
                              <span class="text-muted">oder klicken um auszuwählen</span>
                            </p>
                            <input type="file" id="fileInput" multiple class="d-none"
                              accept="image/*,video/*,audio/*,.pdf">
                            <button type="button" class="btn btn-custom-details btn-sm"
                              onclick="document.getElementById('fileInput').click();">
                              <i class="bi bi-folder2-open me-1"></i> Dateien auswählen
                            </button>
                          </div>
                          <div class="small text-muted mt-2">
                            Unterstützt: JPG, PNG, MP4, MP3, PDF
                          </div>
                        </div>

                        <!-- Upload Progress -->
                        <div class="upload-progress d-none mb-2">
                          <div class="progress mb-1" style="height: 4px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated"></div>
                          </div>
                          <div class="text-center">
                            <small class="upload-status text-muted">Upload läuft...</small>
                          </div>
                        </div>

                        <!-- Hochgeladene Dateien -->
                        <div class="mt-2">
                          <div class="d-flex justify-content-between align-items-center mb-1">
                            <h6 class="mb-2 small">
                              <i class="bi bi-images me-1"></i> Hochgeladene Dateien
                            </h6>
                            <span class="badge bg-secondary" id="fileCount">0</span>
                          </div>
                          <div id="filesGrid" class="row g-5"></div>
                          <div id="noFilesMessage" class="text-center py-3 text-muted">
                            <i class="bi bi-inbox fs-5 d-block mb-2 opacity-50"></i>
                            <p class="small mb-0">Noch keine Dateien hochgeladen</p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Beschreibung Karte ultra kompakt -->
                  <div class="col-12">
                    <div class="card shadow-sm border-0">
                      <div class="card-header text-bg-light">
                        <i class="bi bi-chat-text me-2"></i>Beschreibung
                      </div>
                      <div class="card-body p-3">
                        <div class="mb-0">
                          <label class="form-label small">Informationen zur Abgabe</label>
                          <textarea class="form-control form-control-sm" id="abgabeBeschreibung" rows="2"
                            placeholder="Beschreibe deine Arbeit..."><%= abgabe && abgabe.beschreibung ? abgabe.beschreibung : '' %></textarea>
                        </div>

                        <div class="mb-0">
                          <label class="form-label small fw-medium text-primary">
                            <i class="bi bi-link-45deg"></i> Externer Video-Link (YouTube / Vimeo)
                          </label>
                          <input type="url" class="form-control form-control-sm" id="videoLink"
                            placeholder="https://www.youtube.com/watch?v=..."
                            value="<%= abgabe && abgabe.video_link ? abgabe.video_link : '' %>">
                          <div class="form-text extra-small">Nutze diesen Link, wenn deine Video-Datei zu groß für den
                            direkten Upload ist.</div>
                        </div>


                      </div>
                    </div>
                  </div>

                </div>
              </div>

              <!-- Rechte Spalte: Team + Aktionen -->
              <div class="col-lg-4">
                <div class="row g-3">
                  <!-- Team Karte kompakt -->
                  <div class="col-12">
                    <div class="card shadow-sm border-0">
                      <div class="card-header text-bg-light">
                        <i class="bi bi-people me-2"></i>Team
                      </div>
                      <div class="card-body p-3">
                        <strong class="d-block mb-2">
                          <%= team.name %>
                        </strong>
                        <div class="team-members">
                          <% team.mitglieder.forEach(mitglied=> { %>
                            <div class="d-flex align-items-center mb-2">
                              <div
                                class="avatar-circle bg-secondary bg-opacity-10 text-dark rounded-circle d-flex align-items-center justify-content-center me-2">
                                <span class="small fw-medium">
                                  <%= mitglied.vorname.charAt(0) %>
                                </span>
                              </div>
                              <div class="flex-grow-1">
                                <div class="small">
                                  <%= mitglied.vorname %>
                                    <%= mitglied.nachname %>
                                </div>
                                <% if (mitglied.klasse_name) { %>
                                  <div class="extra-small text-muted">
                                    <%= mitglied.klasse_name %>
                                  </div>
                                  <% } %>
                              </div>
                            </div>
                            <% }) %>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Aktionen Karte kompakt -->
                  <div class="col-12">
                    <div class="card shadow-sm border-0">
                      <div class="card-body p-3">
                        <div class="d-grid gap-2">
                          <button class="btn btn-custom-details btn-sm" id="saveDraftBtn">
                            <i class="bi bi-save me-1"></i> Entwurf speichern
                          </button>
                          <button class="btn btn-custom-newCategorieChallenge btn-sm" id="submitBtn" <%=abgabe &&
                            abgabe.status==='eingereicht' ? 'disabled' : '' %>>
                            <i class="bi bi-send-check me-1"></i>
                            <%= abgabe && abgabe.status==='eingereicht' ? 'Bereits eingereicht' : 'Abgabe einreichen' %>
                          </button>
                        </div>

                        <% if (abgabe && abgabe.status==='eingereicht' ) { %>
                          <div class="alert alert-warning p-2 mt-3 mb-0 small">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            Bereits eingereicht, keine Bearbeitung mehr möglich.
                          </div>
                          <% } else { %>
                            <div class="alert alert-info p-2 mt-3 mb-0 small">
                              <i class="bi bi-info-circle me-1"></i>
                              Nach Einreichung keine Änderungen möglich.
                            </div>
                            <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
  </div>

  <div id="pageData" data-challenge-id="<%= challenge.id %>"
    data-is-submitted="<%= abgabe && abgabe.status === 'eingereicht' %>"
    data-initial-files="<%= JSON.stringify(abgabe && abgabe.medien ? abgabe.medien : []) %>" class="d-none">
  </div>

  <script src="/js/app/abgabeLogic.js"></script>