<% pageTitle = 'Challenges' %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Challenges</h1>
    <% if (currentUser && currentUser.user_role_id !== 1) { %>
      <a href="/challenges/new" class="btn btn-primary">Neue Challenge</a>
    <% } %>
  </div>

  <% if (challenges && challenges.length > 0) { %>
    <div class="row">
      <% challenges.forEach(challenge => { %>
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= challenge.title %></h5>
              <p class="card-text"><%= challenge.beschreibung %></p>
              
              <!-- Kategorie Badge -->
              <span class="badge bg-secondary mb-2"><%= challenge.kategorie %></span>
              
              <!-- Abgabedatum -->
              <% if (challenge.abgabedatum) { %>
                <p class="card-text">
                  <small class="text-muted">
                    Abgabedatum: <%= new Date(challenge.abgabedatum).toLocaleDateString('de-DE') %>
                  </small>
                </p>
              <% } %>
            </div>
            
            <div class="card-footer">
              <!-- Nur für Schüler: Abgabe-Button -->
              <% if (currentUser && currentUser.user_role_id === 1) { %>
                <a href="/challenges/<%= challenge.id %>/abgabe" class="btn btn-sm">Abgabe einreichen</a>
              <% } %>
              
              <!-- Nur für Lehrer/Admin: Bearbeiten -->
              <% if (currentUser && currentUser.user_role_id !== 1) { %>
                <div class="btn-group">
                  <a href="/challenges/<%= challenge.id %>/edit" class="btn btn-outline-primary btn-sm">Bearbeiten</a>
                  <form action="/challenges/<%= challenge.id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Löschen</button>
                  </form>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      <% if (currentUser && currentUser.user_role_id === 1) { %>
        <h4>Keine Challenges verfügbar</h4>
        <p>Du hast aktuell keine Challenges zugewiesen bekommen.</p>
      <% } else { %>
        <h4>Noch keine Challenges vorhanden</h4>
        <p>Erstelle die erste Challenge für deine Schüler.</p>
        <a href="/challenges/new" class="btn btn-primary">Erste Challenge erstellen</a>
      <% } %>
    </div>
  <% } %>
</div>