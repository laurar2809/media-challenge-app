<% pageTitle = "Katergorien" %>

<div class="d-flex align-items-center justify-content-between mb-3">
  <div class="d-flex align-items-center">
    <table>
      <th><h2 class="h4 m-0">Kategorien</h2></th>
      <th><h2> </h2></th>
    </table>
  </div>
  <a href="/items/new" class="btn btn-primary">+ Neue Kategorie</a>
</div>

  <div class="table-responsive">
    <table class="table align-middle m-0">
      <thead class="table-light">
        <tr>
          <th class="text-center">Icon</th>
          <th>Name</th>
          <th>Beschreibung</th>
          <th class="text-end">Aktionen</th>
        </tr>
      </thead>
      <tbody>
        <% if (items.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center py-4 text-muted">Noch keine Eintr√§ge. Leg gleich los! üéØ</td>
          </tr>
        <% } %>
        <% items.forEach(item => { %>
          <tr>
            <td class="text-center">
              <% if (item.icon && isUrl(item.icon)) { %>
                <img src="<%= item.icon %>" alt="" class="rounded" style="width:20px;height:20px;object-fit:cover">
              <% } else if (item.icon && isUploadPath(item.icon)) { %>
                <img src="<%= item.icon %>" alt="" class="rounded" style="width:20px;height:20px;object-fit:cover">
              <% } else if (item.icon) { %>
                <span class="fs-4"><%= item.icon %></span>
              <% } else { %>
                <span class="fs-4"><img src="/assets/file-image.svg" alt="" class="rounded" style="width:20px;height:20px;object-fit:cover"></span>
              <% } %>
            </td>
            <td class="fw-medium"><%= item.title %></td>
            <td class="text-body-secondary"><%= item.description %></td>
            <td class="text-end">
              <a href="/items/<%= item.id %>/edit" class="btn btn-sm btn-outline-secondary">Bearbeiten</a>

              <form action="/items/<%= item.id %>?_method=DELETE" method="POST" class="d-inline delete-form">
                <button type="button" class="btn btn-sm btn-outline-danger" 
                        data-bs-toggle="modal" 
                        data-bs-target="#confirmDeleteModal" 
                        data-id="<%= item.id %>">
                  L√∂schen
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Pop Up L√∂schen Fenster -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title">L√∂schen best√§tigen</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Bist du sicher, dass du diesen Datensatz l√∂schen m√∂chtest?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
            <form id="deleteConfirmForm" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger">Ja, l√∂schen</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
  // Eventlistener f√ºr modales Fenster beim Delete
  const deleteModal = document.getElementById('confirmDeleteModal');
  const deleteForm = document.getElementById('deleteConfirmForm');

  deleteModal.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;      // Button, der das Modal ge√∂ffnet hat
    const itemId = button.getAttribute('data-id');
    // Action auf die richtige ID setzen
    deleteForm.action = `/items/${itemId}?_method=DELETE`;
  });
</script>