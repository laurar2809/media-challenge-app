<link rel="stylesheet" href="/style.css">

<div class="d-flex align-items-center justify-content-between mb-3">
  <h2 class="h4 m-0">Aufgabenpakete</h2>
  <a href="/aufgabenpakete/new" class="btn btn-custom-newCategorieChallenge btn-sm">+ Neues Aufgabenpaket</a>
</div>

<!-- Filter und Suchfunktion -->
<%- include('../../partials/filter_search', { showSchuljahr: false, showKategorie: true, showSearch: true, kategorien,
  activeKategorie, kategorieSelectId: 'kategorienFilter' , searchContainerId: 'searchContainer' ,
  searchInputId: 'aufgabenpaketeSearch' , searchTerm }) %>

  <!-- Cards Container -->
  <div class="row mt-4" id="aufgabenpaketeCardsContainer">
    <% if (aufgabenpakete.length===0) { %>
      <div class="col-12">
        <div class="text-center py-4 text-muted">
          <% if (searchTerm || (activeKategorie && activeKategorie !=='alle' )) { %>
            Keine Aufgabenpakete gefunden für die ausgewählten Filter
            <% } else { %>
              Noch keine Aufgabenpakete vorhanden
              <% } %>
        </div>
      </div>
      <% } else { %>
        <% aufgabenpakete.forEach(paket=> { %>
          <%- include('./card', { paket }) %>
            <% }) %>
              <% } %>
  </div>

  <!-- Delete-Modal -->
  <%- include('../../partials/deleteModal', { modalId: 'confirmDeleteModal' , formId: 'deleteConfirmForm' ,
    submitButtonId: 'confirmDeleteSubmit' , title: 'Löschen bestätigen' ,
    bodyText: 'Bist du sicher, dass du dieses Aufgabenpaket löschen möchtest?' }) %>

    <!-- Scripts - NUR EINMAL -->
    <script src="/js/app/utils/filterUtils.js"></script>
    <script src="/js/app/utils/deleteModalUtils.js"></script>
    <script src="/js/app/aufgabenpaketeLogic.js"></script>