<% pageTitle="Abgabe bewerten" %>

  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="h4 mb-1">Bewertung: <%= abgabe.challenge_title %>
        </h2>
        <div class="d-flex align-items-center gap-2 text-muted">
          <span class="badge bg-secondary">Team: <%= abgabe.team_name %></span>
          <span class="small">
            Status:
            <%= abgabe.status.charAt(0).toUpperCase() + abgabe.status.slice(1) %>

          </span>
        </div>
      </div>
      <a href="/bewertung" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Zurück zur Übersicht
      </a>
    </div>


    <div class="row">
      <div class="col-lg-8">

        <div class="card mb-3">
          <div class="card">
            <div class="card-header text-bg-light">
              <h5 class="card-title mb-0">
                <i class="bi bi-people"></i> Teammitglieder
              </h5>
            </div>
            <ul class="list-group list-group-flush">
              <% if (teamMitglieder && teamMitglieder.length> 0) { %>
                <% teamMitglieder.forEach(mitglied=> { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                      <i class="bi bi-person-circle me-2 text-primary"></i>
                      <strong>
                        <%= mitglied.vorname %>
                          <%= mitglied.nachname %>
                      </strong>
                    </div>
                    <span class="badge bg-secondary-subtle text-secondary border">
                      <%= mitglied.klasse_name || 'Keine Klasse' %>
                    </span>
                  </li>
                  <% }) %>
                    <% } else { %>
                      <li class="list-group-item text-muted small italic text-center py-3">
                        <i class="bi bi-info-circle me-1"></i> Keine Mitglieder gefunden.
                      </li>
                      <% } %>
            </ul>
          </div>
        </div>


        <div class="card ">
          <div class="card-header text-bg-light mb-3">
            <h5 class="card-title mb-0">
              <i class="bi bi-images"></i> Hochgeladene Medien
            </h5>
          </div>
          <div class="card-body">


            <div id="mediaGallery" class="row g-3">

              <% if (abgabe.video_link) { %>
                <div class="col-12 mb-4">
                  <div class="card shadow-sm border-0 overflow-hidden">
                    <div
                      class="card-header bg-light d-flex justify-content-between align-items-center py-2 border-bottom">
                      <span class="small fw-medium text-muted">
                        <i class="bi bi-play-btn me-2"></i> Video-Abgabe (Externer Link)
                      </span>
                      <!-- <a href="<%= abgabe.video_link %>" target="_blank"
                        class="btn btn-link btn-sm text-decoration-none p-0" style="font-size: 0.75rem;">
                        In YouTube öffnen <i class="bi bi-box-arrow-up-right ms-1"></i>
                      </a> -->
                    </div>

                    <div class="card-body p-0" style="background-color: #f8f9fa;">
                      <% let videoSrc=abgabe.video_link; let isYouTube=false; const
                        ytMatch=abgabe.video_link.match(/(?:https?:\/\/)?(?:www\.)?(?:youtube\.com\/watch\?v=|youtu\.be\/)([^\s&]+)/);
                        if (ytMatch) { videoSrc=`https://www.youtube.com/embed/${ytMatch[1]}`; isYouTube=true; } %>

                        <% if (isYouTube) { %>
                          <div class="ratio ratio-16x9 shadow-sm">
                            <iframe src="<%= videoSrc %>" title="YouTube video player" frameborder="0"
                              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                              allowfullscreen style="background: #000;"></iframe>
                          </div>
                          <% } else { %>
                            <div class="p-4 text-center border-top bg-white">
                              <i class="bi bi-link-45deg fs-2 text-primary mb-2"></i>
                              <p class="mb-1 fw-bold text-dark">Externer Link hinterlegt:</p>
                              <div class="py-2 px-3 bg-light rounded border d-inline-block mw-100">
                                <a href="<%= abgabe.video_link %>" target="_blank"
                                  class="text-primary fw-medium text-break">
                                  <%= abgabe.video_link %> <i class="bi bi-box-arrow-up-right ms-1"></i>
                                </a>
                              </div>
                              <p class="small text-muted mt-2 mb-0">Keine automatische Videovorschau für diesen Anbieter
                                verfügbar.</p>
                            </div>
                            <% } %>
                    </div>
                  </div>
                </div>
                <% } %>

                  <% if (medien && medien.length===0) { %>
                    <div class="col-12 text-center py-5 text-muted">
                      <i class="bi bi-exclamation-triangle display-6"></i>
                      <p class="mt-2">Keine Mediendateien zu dieser Abgabe gefunden.</p>
                    </div>
                    <% } %>

                      <% medien.forEach(medium=> { %>
                        <div class="col-6 col-sm-4 col-md-4 col-xl-3">
                          <div class="card h-100 shadow-sm border-0 bg-white">
                            <div style="height: 120px; overflow: hidden; position: relative;"
                              class="rounded-top bg-dark d-flex align-items-center justify-content-center">

                              <% if (medium.datei_typ==='image' ) { %>
                                <img src="<%= medium.datei_pfad %>" class="w-100 h-100" style="object-fit: cover;">
                                <% } else if (medium.datei_typ==='video' ) { %>
                                  <div class="text-center text-white">
                                    <i class="bi bi-play-circle-fill fs-1"></i>
                                    <div style="font-size: 0.6rem; text-transform: uppercase;">Video</div>
                                  </div>
                                  <% } else if (medium.datei_typ==='audio' ) { %>
                                    <div class="text-center text-warning">
                                      <i class="bi bi-mic-fill fs-1"></i>
                                      <div style="font-size: 0.6rem; text-transform: uppercase;">Audio</div>
                                    </div>
                                    <% } else { %>
                                      <div class="text-center text-info">
                                        <i class="bi bi-file-earmark-text-fill fs-1"></i>
                                        <div style="font-size: 0.6rem; text-transform: uppercase;">Dokument</div>
                                      </div>
                                      <% } %>
                            </div>

                            <div class="card-body p-2 d-flex flex-column justify-content-between">
                              <div class="small fw-bold text-truncate mb-2" title="<%= medium.original_name %>"
                                style="max-width: 100%;">
                                <%= medium.original_name %>
                              </div>

                              <div class="d-flex justify-content-between align-items-center border-top pt-2">
                                <a href="<%= medium.datei_pfad %>" target="_blank"
                                  class="text-decoration-none fw-medium" style="font-size: 0.75rem;">
                                  Ansehen <i class="bi bi-box-arrow-up-right ms-1" style="font-size: 0.65rem;"></i>
                                </a>

                                <a href="<%= medium.datei_pfad %>" download="<%= medium.original_name %>"
                                  class="text-secondary p-0" title="Herunterladen" style="line-height: 1;">
                                  <i class="bi bi-download" style="font-size: 1rem;"></i>
                                </a>
                              </div>
                            </div>
                          </div>
                        </div>
                        <% }); %>
            </div>

            <hr>
            <% if (abgabe.beschreibung) { %>
              <p class="text-muted small">
                <%= abgabe.beschreibung %>
              </p>
              <% } else { %>
                <p class="text-muted small">Keine Beschreibung angegeben.</p>
                <% } %>

          </div>
        </div>


      </div>

      <div class="col-lg-4">
        <div class="card">
          <div class="card-header text-bg-light ">
            <h5 class="card-title mb-0">
              <i class="bi bi-check2-square"></i> Bewertung eintragen
            </h5>
          </div>
          <div class="card-body">

            <form action="/bewertung/<%= abgabe.id %>" method="POST">
              <div class="mb-3">
                <label for="punkte" class="form-label">Punktzahl</label>
                <input type="number" class="form-control" id="punkte" name="punkte" min="0" max="100"
                  value="<%= bewertung && bewertung.punkte ? bewertung.punkte : '' %>">
              </div>

              <div class="mb-3">
                <label for="feedback" class="form-label">Feedback</label>
                <textarea class="form-control" id="feedback" name="feedback" rows="5" required>
                <%= bewertung && bewertung.feedback ? bewertung.feedback : '' %>
              </textarea>
              </div>

              <input type="hidden" name="status" id="status-field" value="bewertet">

              <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success btn-sm" id="btn-bewerten">
                  <i class="fas fa-check"></i> Als bewertet speichern
                </button>
                <button type="button" class="btn btn-danger btn-sm" id="btn-ablehnen">
                  <i class="fas fa-times"></i> Abgabe ablehnen
                </button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/app/bewertungDetailLogic.js"></script>