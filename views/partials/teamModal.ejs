<div class="modal fade" id="<%= modalId || 'teamModal' %>" tabindex="-1" aria-labelledby="teamModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="teamModalLabel">Team verwalten</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label fw-bold">Team Name *</label>
          <input type="text" class="form-control" id="newTeamName" placeholder="z.B. Die Medien-Profis">
        </div>

        <div class="row g-2 mb-3">
          <div class="col-md-6">
            <input type="text" class="form-control form-control-sm" id="nameFilter" placeholder="Schüler suchen...">
          </div>
          <div class="col-md-3">
            <select class="form-select form-select-sm" id="classFilter">
              <option value="alle" selected>Alle Klassen</option>
              </select>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <label class="small text-muted">Verfügbare Schüler (Klicken zum Hinzufügen):</label>
            <div id="availableMembersContainer" class="border rounded p-2 bg-light" style="height: 200px; overflow-y: auto;">
              <div class="d-flex flex-wrap gap-1" id="availableMembers"></div>
            </div>
          </div>
          <div class="col-md-6">
            <label class="small text-muted">Gewähltes Team (Drag & Drop möglich):</label>
            <div id="teamDropZone" class="border rounded p-2 bg-white d-flex flex-wrap gap-1 align-content-start" style="height: 200px; overflow-y: auto;">
              <p class="text-muted text-center w-100 mt-5 small">Noch keine Mitglieder</p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <small class="text-muted me-auto" id="memberCount">0 Mitglieder</small>
        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Abbrechen</button>
        <button type="button" class="btn btn-custom-safe btn-sm" id="modalSubmitBtn">
          <i class="bi bi-check-circle me-1"></i> Bestätigen
        </button>
      </div>
    </div>
  </div>
</div>