<% pageTitle="Challenges" %>

<div class="d-flex align-items-center justify-content-between mb-3">
  <h2 class="h4 m-0">Challenges</h2>
  <a href="/challenges/new" class="btn btn-custom-newCategorieChallenge">+ Neue Challenge</a>
</div>

<div class="table-responsive">
  <table class="table align-middle m-0">
    <thead class="table-light">
      <tr>
        <th>Aufgabenpaket</th>
        <th>Team/Schüler</th>
        <th>Kategorie</th>
        <th>Status</th>
        <th>Abgabedatum</th>
        <th class="text-end">Aktionen</th>
      </tr>
    </thead>
    <tbody>
      <% if (challenges && challenges.length === 0) { %>
        <tr>
          <td colspan="6" class="text-center py-4 text-muted">Noch keine Challenges erstellt</td>
        </tr>
      <% } %>

      <% if (challenges && challenges.length > 0) { %>
        <% challenges.forEach(challenge => { %>
          <tr>
            <td class="fw-medium">
              <%= challenge.aufgabenpaket_title %>
            </td>
            <td>
              <% if (challenge.team_name) { %>
                <div class="fw-medium"><%= challenge.team_name %></div>
                <small class="text-muted">
                  <%= challenge.team_mitglieder_names || 'Keine Mitglieder' %>
                </small>
              <% } else { %>
                <span class="text-muted">-</span>
              <% } %>
            </td>
            <td class="text-body-secondary">
              <%= challenge.kategorie %>
            </td>
            <td>
              <span class="badge 
                <%= challenge.status === 'offen' ? 'bg-secondary' : '' %>
                <%= challenge.status === 'in_arbeit' ? 'bg-info' : '' %>
                <%= challenge.status === 'abgeschlossen' ? 'bg-success' : '' %>
                <%= challenge.status === 'bewertet' ? 'bg-primary' : '' %>
              ">
                <%= challenge.status ? challenge.status.replace('_', ' ') : 'offen' %>
              </span>
            </td>
            <td class="text-body-secondary">
              <%= challenge.abgabedatum ? new Date(challenge.abgabedatum).toLocaleDateString('de-DE') : '-' %>
            </td>
            <td class="text-end" style="white-space: nowrap;">
              <a href="/challenges/<%= challenge.id %>" class="btn btn-outline-primary btn-sm">Details</a>
              <a href="/challenges/<%= challenge.id %>/edit" class="btn btn-outline-secondary btn-sm">Bearbeiten</a>
              <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                data-bs-target="#confirmDeleteModal" data-id="<%= challenge.id %>">Löschen</button>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>

  <!-- Pop Up Löschen Fenster -->
  <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header custom-delete-header">
          <h5 class="modal-title">Löschen bestätigen</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Bist du sicher, dass du diese Challenge löschen möchtest?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
          <form id="deleteConfirmForm" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-custom-danger">Ja, löschen</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Eventlistener für modales Fenster beim Delete
  const deleteModal = document.getElementById('confirmDeleteModal');
  const deleteForm = document.getElementById('deleteConfirmForm');

  deleteModal.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;
    const itemId = button.getAttribute('data-id');
    deleteForm.action = `/challenges/${itemId}?_method=DELETE`;
  });
</script>